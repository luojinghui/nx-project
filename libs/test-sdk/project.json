{
  "name": "@xylink/test-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/test-sdk/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/test-sdk",
        "main": "libs/test-sdk/src/index.ts",
        "tsConfig": "libs/test-sdk/tsconfig.lib.json",
        "assets": ["libs/test-sdk/*.md"]
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "package": "libs/test-sdk",
        "registry": "https://fe-private-npm.xylink.com/",
        "tag": "release v1.0.0"
      }
    },
    "nx-release-publish": {
      "options": {
        "registry": "https://fe-private-npm.xylink.com/",
        "tag": "Release v{version}"
      }
    }
  }
}
